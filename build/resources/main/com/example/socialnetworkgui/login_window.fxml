                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="dateLabel" text="Date" GridPane.columnIndex="3" GridPane.columnSpan="3" />
                  <Label alignment="CENTER" contentDisplay="CENTER" lineSpacing="20.0" styleClass="pinnedLabels" stylesheets="@CSS/login_page.css" text="Password:" GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.rowIndex="3">
                     <font>
                        <Font name="Broadway" size="13.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="animatedImage" fitHeight="297.0" fitWidth="235.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
